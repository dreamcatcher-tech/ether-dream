{
  "scripts": {
    "lint": "eslint .",
    "test": "hardhat test",
    "full": "FULL_TEST=1 hardhat --emoji coverage",
    "gas": "REPORT_GAS=1 hardhat test",
    "check": "CHECK_MODEL=1 hardhat --emoji test --grep check",
    "coverage": "hardhat --emoji coverage",
    "size": "hardhat size-contracts",
    "watch": "nodemon --exec \"hardhat --emoji test\"",
    "watch:check": "nodemon --exec \"npm run check\"",
    "watch:coverage": "nodemon --exec \"npm run coverage\""
  },
  "devDependencies": {
    "@ipld/dag-pb": "^4.0.5",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@xstate/test": "^1.0.0-alpha.1",
    "base58-solidity": "^1.0.2",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-plugin-mocha": "^10.1.0",
    "fast-deep-equal": "^3.1.3",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "immutable": "^4.3.4",
    "mocha": "^10.2.0",
    "multiformats": "^12.1.0",
    "nodemon": "^3.0.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "uint8arrays": "^4.0.6",
    "xstate": "^4.38.2"
  },
  "nodemonConfig": {
    "ignore": [
      "artifacts/**",
      "cache/**",
      "coverage/**"
    ],
    "ext": "js,mjs,sol"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "type": "module"
}
